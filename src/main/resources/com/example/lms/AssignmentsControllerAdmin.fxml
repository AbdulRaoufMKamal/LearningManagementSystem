<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lms.AssignmentsController">
    <children>
        <AnchorPane layoutY="-2.0" prefHeight="400.0" prefWidth="146.0" />
        <ImageView fitHeight="69.0" fitWidth="156.0" layoutX="221.0">
            <image>
                <Image url="@../../../img/lms_new.jpg" />
            </image>
        </ImageView>
        <Button layoutX="547.0" layoutY="14.0" mnemonicParsing="false" onAction="#back_click" text="BACK" />
      <Button fx:id="submitBtn" layoutX="246.0" layoutY="354.0" mnemonicParsing="false" onAction="#Submit" prefHeight="39.0" prefWidth="131.0" text="UPLOAD">
         <font>
            <Font name="Cascadia Mono Regular" size="18.0" />
         </font>
      </Button>
      <Button fx:id="downloadBtn" layoutX="73.0" layoutY="354.0" mnemonicParsing="false" onAction="#Download" prefHeight="39.0" prefWidth="146.0" text="DOWNLOAD">
         <font>
            <Font name="Cascadia Mono Regular" size="18.0" />
         </font>
      </Button>
      <Button fx:id="submitBtn1" layoutX="394.0" layoutY="354.0" mnemonicParsing="false" onAction="#feedback" prefHeight="39.0" prefWidth="192.0" text="PROVIDE FEEDBACK">
         <font>
            <Font name="Cascadia Mono Regular" size="18.0" />
         </font>
      </Button>
      <TableView fx:id="assignmentTable" layoutY="75.0" prefHeight="269.0" prefWidth="600.0">
         <columns>
            <TableColumn fx:id="sub_id" editable="false" prefWidth="97.0" text="Submission ID" />
            <TableColumn fx:id="email_col" editable="false" prefWidth="173.0" text="Email" />
            <TableColumn fx:id="file_name_col" prefWidth="194.0" text="File Name" />
            <TableColumn fx:id="file_status" prefWidth="134.0" text="File Status" />
         </columns>
      </TableView>
    </children>
</AnchorPane>
